<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mohamedabdelaziz.camreader.CameraActivity">

    <SurfaceView
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ScrollView
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:padding="@dimen/fab_margin"
        android:background="@color/background_layout"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_layout"
        android:gravity="top">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/h25"
                android:id="@+id/flash"
                android:layout_height="@dimen/h25"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/flash" />

            <Button
                android:layout_width="@dimen/h25"
                android:id="@+id/replace"
                android:layout_height="@dimen/h25"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/exchange" />

            <Button
                android:layout_width="@dimen/h25"
                android:id="@+id/clear"
                android:layout_height="@dimen/h25"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/delete" />

            <Button
                android:layout_width="@dimen/h25"
                android:id="@+id/copy"
                android:layout_height="@dimen/h25"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/copy" />

            <Button
                android:layout_width="@dimen/h25"
                android:id="@+id/pdf"
                android:layout_height="@dimen/h25"
                android:layout_margin="@dimen/fab_margin"
                android:background="@drawable/pdf" />
        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/snap"
        android:layout_width="@dimen/snap_button_h_w"
        android:layout_height="@dimen/snap_button_h_w"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="@dimen/h25"
        android:background="@drawable/snap_button" />
</android.support.design.widget.CoordinatorLayout>
